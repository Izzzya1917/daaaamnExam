<Window x:Class="ShopTerminal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopTerminal"
        mc:Ignorable="d"
        Title="{Binding ElementName=MainFrame}" Height="450" Width="800"
        MinHeight="450" MinWidth="800"
        MaxHeight="1080" MaxWidth="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" >
            <Button x:Name="backBtn" Content="Nazad" Height="50" Width="100" Click="backBtnClick"/>
        </StackPanel>
            <Frame x:Name="MainFrame" Grid.Row="1"/>
    </Grid>
</Window>
